# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# NextAuth Configuration
# URL where your application is hosted
NEXTAUTH_URL="http://localhost:3000"
# Secret key for NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-nextauth-secret-key-at-least-32-characters-long"

# JWT Secret (for additional JWT operations if needed)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key-for-additional-jwt-operations"

# OpenCage API for Geocoding
# Get your free API key from: https://opencagedata.com/
NEXT_PUBLIC_OPENCAGE_API_KEY="your-opencage-api-key-for-geocoding"

# Application URLs (adjust for your deployment)
NEXT_PUBLIC_ADMIN_URL="http://localhost:3001"
NEXT_PUBLIC_CLIENT_URL="http://localhost:3000"

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="5242880"  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Email Configuration (optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password-or-app-password"
SMTP_FROM="noreply@your-domain.com"

# Redis Configuration (optional - for caching)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="development"

# Admin Default Credentials (for initial setup)
ADMIN_EMAIL="admin@civic.gov"
ADMIN_PASSWORD="Admin@123"
ADMIN_NAME="System Administrator"